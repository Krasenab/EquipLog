@model List<EquipmentListItemViewModel>

<div class="card-grid" style="border:2px solid black;">
    @if (Model.Count!=0)
    {
        @foreach (var e in Model)
        {
            <div class="equipment-card"
                 data-category="@e.Category.ToLower()"
                 data-name="@e.Name.ToLower()">
                <header>
                    <div class="category-icon">
                        <i class="fas fa-@e.CategoryIcon"></i>
                    </div>
                    <h5>@e.Name</h5>
                </header>
                <div class="card-body">
                    <span class="status-badge status-@e.Status.ToLower()">
                        @e.Status
                    </span>
                    <ul>
                        <li><span>Serial #</span><span>@e.SerialNumber</span></li>
                        <li><span>Location</span><span>@e.Location</span></li>
                    </ul>
                </div>
                <div class="actions">
                    <a asp-controller="Equipment"
                       asp-action="Details"
                       asp-route-id="@e.Id"
                       class="btn btn-view">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a asp-controller="Equipment"
                       asp-action="Edit"
                       asp-route-id="@e.Id"
                       class="btn btn-edit">
                        <i class="fas fa-edit"></i>
                    </a>
                    <button type="button"
                            data-id="@e.Id"
                            class="btn btn-delete js-delete">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </div>
        }

    }
    else
    {
        <div class="container" style="height:50vh; display: flex;justify-content: center;">


        </div>

    }

  
</div>
