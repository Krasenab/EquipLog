<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>eqipLog – Add New Ticket</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <!-- FontAwesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet"/>
    <!-- AOS Animation CSS -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet"/>
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet"/>
    <style>
        :root {
            --primary: #6366f1;
            --primary-light: #8b85f9;
            --secondary: #10b981;
            --light-bg: #f9fafe;
            --border-radius: 0.75rem;
            --box-shadow-lg: 0 12px 20px -5px rgba(0,0,0,0.1);
            --transition: all 0.4s ease;
        }


        .card-custom {
            border: none;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow-lg);
            overflow: hidden;
        }

        .card-custom:hover {
            transform: translateY(-5px);
        }

        .card-header-custom {
            background: linear-gradient(135deg, var(--primary), var(--primary-light));
            color: #fff;
            clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%);
        }

        .card-header-custom h3 {
            margin: 0;
        }

        .section-separator {
            height: 4px;
            background: var(--secondary);
            margin: 2rem 0 1rem;
            border-radius: 2px;
        }

        .input-group-text {
            background: transparent;
            border: none;
            font-size: 1.1rem;
            color: var(--primary);
        }

        .form-control, .form-select {
            border-radius: var(--border-radius);
            border: 1px solid #dee2e6;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 0.2rem rgba(99,102,241,0.2);
        }

        .btn-custom {
            border-radius: var(--border-radius);
            padding: 0.75rem 2rem;
            font-weight: 500;
        }

        .btn-primary {
            background: var(--primary);
            border: none;
            position: relative;
        }

        .btn-primary:hover {
            background: var(--primary-light);
        }

        .btn-primary.loading::after {
            content: "";
            position: absolute;
            width: 1rem;
            height: 1rem;
            border: 2px solid white;
            border-top: 2px solid transparent;
            border-radius: 50%;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            animation: spin 0.7s linear infinite;
        }

        .btn-primary.loading > span {
            visibility: hidden;
        }

        @@keyframes spin {
            to { transform: translate(-50%, -50%) rotate(360deg); }
        }
    </style>
</head>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <div class="card-custom" data-aos="fade-up">
                <div class="card-header-custom p-5 text-center">
                    <i class="fas fa-ticket-alt fa-2x mb-2"></i>
                    <h3 class="fw-bold">Submit New Ticket</h3>
                    <p class="text-light-opacity">Report issues, bugs or requests in a structured way</p>
                </div>
                <div class="card-body p-5 bg-white">
                    <form id="ticketForm">
                        <div class="section-separator"></div>
                        <h5 class="mb-4 text-uppercase text-secondary">Ticket Information</h5>
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-heading"></i></span>
                                    <input type="text" class="form-control" placeholder="Title" required />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-flag"></i></span>
                                    <select class="form-select" required>
                                        <option disabled selected>Priority</option>
                                        <option>Low</option>
                                        <option>Medium</option>
                                        <option>High</option>
                                        <option>Urgent</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-layer-group"></i></span>
                                    <select class="form-select" required>
                                        <option disabled selected>Status</option>
                                        <option>Open</option>
                                        <option>In Progress</option>
                                        <option>Closed</option>
                                        <option>Other</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mt-1">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    <input type="email" class="form-control" placeholder="Your Email" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-paperclip"></i></span>
                                    <input type="file" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mt-1">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Describe the issue" style="height: 120px;" required></textarea>
                                    <label>Description</label>
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mt-1">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Optional notes" style="height: 100px;"></textarea>
                                    <label>Notes</label>
                                </div>
                            </div>
                        </div>

                        <!-- Technician & Created At -->
                        <div class="row g-4 mt-1">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user-cog"></i></span>
                                    <select class="form-select" required>
                                        <option disabled selected>Select Technician</option>
                                        <option>Ivan Petrov</option>
                                        <option>Maria Georgieva</option>
                                        <option>Georgi Nikolov</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                    <input type="text" class="form-control" id="createdAt" readonly />
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="text-center mt-5">
                            <button type="reset" class="btn btn-outline-secondary btn-custom">
                                <i class="fas fa-times-circle me-2"></i>Cancel
                            </button>
                            <button type="submit" id="submitBtn" class="btn btn-primary btn-custom me-3">
                                <span><i class="fas fa-paper-plane me-2"></i>Submit Ticket</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<!-- AOS JS -->
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({ duration: 700, once: true });

    // Set current date/time in "Created At"
    document.addEventListener("DOMContentLoaded", function () {
        const createdAtInput = document.getElementById("createdAt");
        const now = new Date();
        createdAtInput.value = now.toLocaleDateString() + " " + now.toLocaleTimeString();
    });

    // Submit animation
    document.getElementById("ticketForm").addEventListener("submit", function (e) {
        e.preventDefault();
        const btn = document.getElementById("submitBtn");
        btn.classList.add("loading");

        setTimeout(() => {
            btn.classList.remove("loading");
            alert("Ticket submitted!");
            this.reset();

            // reset createdAt again after form reset
            const now = new Date();
            document.getElementById("createdAt").value = now.toLocaleDateString() + " " + now.toLocaleTimeString();
        }, 2000);
    });
</script>

