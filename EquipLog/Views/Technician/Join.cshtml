<head>
    <!-- FontAwesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- AOS Animation CSS -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="~/css/technicianjoin.css" rel="stylesheet" />
</head>
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8">
            <div class="card-custom" data-aos="zoom-in">
                <div class="card-header-custom">
                    <i class="fas fa-user-cog fa-2x mb-2"></i>
                    <h3 class="fw-bold">Become Technician</h3>
                    <p class="text-light-opacity">Join as a technician in EquipLog</p>
                </div>
                <div class="card-body p-5 bg-white">
                    <form id="technicianForm" method="post" action="/Technician/Create">
                        <div class="section-separator"></div>
                        <h5 class="mb-4 text-uppercase text-secondary">Your Details</h5>
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-id-badge"></i></span>
                                    <input type="text" name="Name" class="form-control" placeholder="Full Name" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-building"></i></span>
                                    <input type="text" name="TechCorporateID" class="form-control" placeholder="Corporate ID" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-tools"></i></span>
                                    <input type="text" name="Skill" class="form-control" placeholder="Primary Skill" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                    <input type="tel" name="PhoneNumber" class="form-control" placeholder="Phone Number" required>
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-5">
                            <button type="reset" class="btn btn-outline-secondary btn-custom me-3">
                                <span class="btn-text"><i class="fas fa-undo-alt me-2"></i>Cancel</span>
                            </button>
                            <button type="submit" id="submitBtn" class="btn btn-primary btn-custom">
                                <span class="btn-text"><i class="fas fa-user-check me-2"></i>Join as Technician</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({ duration: 700, once: true });

    const form = document.getElementById('technicianForm');
    const btn = document.getElementById('submitBtn');

    btn.addEventListener('click', e => {
        e.preventDefault();
        btn.disabled = true;
        btn.classList.add('btn-loading');
        setTimeout(() => {
            btn.classList.remove('btn-loading');
            btn.classList.add('btn-done');
            setTimeout(() => form.submit(), 600);
        }, 2000);
    });
</script>