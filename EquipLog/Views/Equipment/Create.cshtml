<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>eqipLog – Add New Equipment</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- FontAwesome Icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <!-- AOS Animation CSS -->
  <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary: #6366f1;
      --primary-light: #8b85f9;
      --secondary: #10b981;
      --error: #dc3545;
      --light-bg: #f9fafe;
      --pill-radius: 50px;
      --transition-fast: all 0.25s ease;
            --body-font: 'Poppins', sans-serif;
            --border-radius: 0.5rem;
            --box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --box-shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --transition: all 0.3s ease;
    }

    * {
      transition: var(--transition-fast);
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: var(--light-bg);
      color: #333;
    }

    /* Карта */
    .card-custom {
      border: none;
      border-radius: var(--pill-radius);
      box-shadow: 0 12px 20px -5px rgba(0,0,0,0.1);
      overflow: hidden;
    }
    .card-custom:hover {
      transform: translateY(-5px);
    }
    .card-header-custom {
      background: linear-gradient(135deg, var(--primary), var(--primary-light));
      color: #fff;
      clip-path: polygon(0 0,100% 0,100% 85%,0 100%);
      text-align: center;
      padding: 3rem 1.5rem;
    }
    .card-header-custom h3 {
      margin-bottom: 0.5rem;
    }

    .section-separator {
      height: 4px;
      background: var(--secondary);
      margin: 2rem 0 1rem;
      border-radius: 2px;
    }

    .input-group-text {
      background: transparent;
      border: none;
      font-size: 1.1rem;
      color: var(--primary);
    }
    .form-control, .form-select {
      /* border-radius: var(--pill-radius); */
      border: 1px solid #dee2e6;
    }
    .form-control:focus, .form-select:focus {
      border-color: var(--primary);
      box-shadow: 0 0 0 0.2rem rgba(99,102,241,0.2);
    }

    /* —— Morphing Progress Buttons —— */
    .btn-custom {
      position: relative;
      overflow: hidden;
      border-radius: var(--pill-radius);
      padding: 0.75rem 2rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .btn-primary {
      background: var(--primary);
      border: none;
      color: #fff;
      box-shadow: 0 5px 15px rgba(99,102,241,0.4);
    }
    .btn-primary:hover {
      background: var(--primary-light);
      transform: translateY(-2px);
    }

    .btn-outline-secondary {
      border: 2px solid #6c757d;
      color: #6c757d;
    }
    .btn-outline-secondary:hover {
      background: var(--secondary);
      color: #fff;
      border-color: var(--secondary);
      transform: translateY(-2px);
    }

    @@keyframes spin {
      to { transform: rotate(360deg); }
    }

    /* Loading state */
    .btn-loading .btn-text {
      opacity: 0 !important;
    }
    .btn-loading::after {
      content: "";
      position: absolute;
      top: 50%; left: 50%;
      width: 1.5rem; height: 1.5rem;
      margin: -0.75rem 0 0 -0.75rem;
      border: 3px solid #fff;
      border-top-color: transparent;
      border-radius: 50%;
      animation: spin 0.8s linear infinite;
    }

    /* Success state */
    .btn-success .btn-text {
      opacity: 0 !important;
    }
    .btn-success::after {
      content: "\f058";
      font-family: "Font Awesome 5 Free";
      font-weight: 900;
      font-size: 1.2rem;
      color: #fff;
      position: absolute; top: 50%; left: 50%;
      transform: translate(-50%, -50%);
    }

    /* Error state */
    .btn-error .btn-text {
      opacity: 0 !important;
    }
    .btn-error::after {
      content: "\f057";
      font-family: "Font Awesome 5 Free";
      font-weight: 900;
      font-size: 1.2rem;
      color: #fff;
      position: absolute; top: 50%; left: 50%;
      transform: translate(-50%, -50%);
    }
  </style>
</head>
<body>
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-xl-8 col-lg-10">
        <div class="card-custom" data-aos="zoom-in">
          <div class="card-header-custom">
            <i class="fas fa-cogs fa-2x mb-2"></i>
            <h3 class="fw-bold">Add New Equipment</h3>
            <p>Quickly register your device with our intuitive form</p>
          </div>
          <div class="card-body p-5 bg-white">
            <form id="equipmentForm" method="post" action="/Your/Controller/Action">
              <!-- Basic Information -->
              <div class="section-separator"></div>
              <h5 class="mb-4 text-uppercase text-secondary">Basic Information</h5>
              <div class="row g-4">
                <div class="col-md-6">
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-tag"></i></span>
                    <input type="text" id="equipmentName" class="form-control" placeholder="Equipment Name" required>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-list"></i></span>
                    <select id="category" class="form-select" required>
                      <option value="" disabled selected>Category</option>
                      <option>Computer</option>
                      <option>Printer</option>
                      <option>Router</option>
                      <option>Other</option>
                    </select>
                  </div>
                </div>
              </div>

              <!-- Technical Details -->
              <div class="section-separator mt-5"></div>
              <h5 class="mb-4 text-uppercase text-secondary">Technical Details</h5>
              <div class="row g-4">
                <div class="col-md-6">
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-barcode"></i></span>
                    <input type="text" id="serialNumber" class="form-control" placeholder="Serial Number" required>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-info-circle"></i></span>
                    <input type="text" id="currentStatus" class="form-control" placeholder="Current Status" required>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-shield-alt"></i></span>
                    <input type="number" id="warrantyMonths" class="form-control" placeholder="Warranty (Months)" min="0" required>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-hourglass-half"></i></span>
                    <input type="number" id="lifespanYears" class="form-control" placeholder="Life Span (Years)" min="0" required>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-industry"></i></span>
                    <input type="text" id="manufacturer" class="form-control" placeholder="Manufacturer" required>
                  </div>
                </div>
              </div>

              <!-- Key Identifiers -->
              <div class="section-separator mt-5"></div>
              <h5 class="mb-4 text-uppercase text-secondary">Key Identifiers</h5>
              <div class="row g-4">
                <div class="col-md-6">
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-tag"></i></span>
                    <input type="text" id="model" class="form-control" placeholder="Model" required>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-id-badge"></i></span>
                    <input type="text" id="assetTag" class="form-control" placeholder="Asset Tag">
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                    <input type="text" id="location" class="form-control" placeholder="Location">
                  </div>
                </div>
              </div>

              <!-- Additional Information -->
              <div class="section-separator mt-5"></div>
              <h5 class="mb-4 text-uppercase text-secondary">Additional Information</h5>
              <div class="row g-4">
                <div class="col-12">
                  <div class="form-floating">
                    <textarea id="description" class="form-control" placeholder="Description" style="height:120px;" required></textarea>
                    <label for="description">Description</label>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-floating">
                    <textarea id="customProperties" class="form-control" placeholder="Custom Properties" style="height:100px;"></textarea>
                    <label for="customProperties">Custom Properties</label>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-floating">
                    <textarea id="notes" class="form-control" placeholder="Notes" style="height:100px;"></textarea>
                    <label for="notes">Notes</label>
                  </div>
                </div>
              </div>

              <!-- Actions -->
              <div class="text-center mt-5">
                <button type="reset" id="cancelBtn" class="btn btn-outline-secondary btn-custom me-3">
                  <span class="btn-text"><i class="fas fa-times-circle me-2"></i>Cancel</span>
                </button>
                <button type="submit" id="createBtn" class="btn btn-primary btn-custom">
                  <span class="btn-text"><i class="fas fa-plus-circle me-2"></i>Create Equipment</span>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
  <script>
    AOS.init({ duration: 700, once: true });

    const form = document.getElementById('equipmentForm');
    const createBtn = document.getElementById('createBtn');
    const cancelBtn = document.getElementById('cancelBtn');

    function morph(btn, success, callback) {
      btn.disabled = true;
      btn.classList.add('btn-loading');
      setTimeout(() => {
        btn.classList.remove('btn-loading');
        btn.classList.add(success ? 'btn-success' : 'btn-error');
        setTimeout(callback, 800);
      }, 2000);
    }

    createBtn.addEventListener('click', e => {
      e.preventDefault();
      morph(createBtn, true, () => form.submit());
    });

    cancelBtn.addEventListener('click', e => {
      e.preventDefault();
      morph(cancelBtn, false, () => {
        cancelBtn.classList.remove('btn-error');
        cancelBtn.disabled = false;
      });
    });
  </script>
</body>
</html>
