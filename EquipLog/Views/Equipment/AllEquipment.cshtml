@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model EquipLog.ViewModels.EquipmentFilterViewModel

<!DOCTYPE html>
<html lang="bg" style="overflow-x: hidden;">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>EquipLog – All Equipment</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- FontAwesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
  <!-- AOS CSS -->
  <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />
  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />

  <style>
    :root {
      --primary: #6366f1;
      --primary-dark: #4f46e5;
      --secondary: #10b981;
      --dark: #111827;
      --light: #f9fafb;
      --gray: #6b7280;
      --warning: #f59e0b;
      --danger: #ef4444;
      --success: #10b981;
      --info: #3b82f6;
      --body-font: 'Poppins', sans-serif;
      --border-radius: 0.5rem;
      --box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1),0 2px 4px -1px rgba(0,0,0,0.06);
      --box-shadow-lg: 0 10px 15px -3px rgba(0,0,0,0.1),0 4px 6px -2px rgba(0,0,0,0.05);
      --transition: all 0.3s ease;
    }
    *, *::before, *::after {
      box-sizing: border-box;
      transition: var(--transition);
    }
 

    /* полупрозрачни зъбни колела */
    .bg-icon {
      position: absolute;
      font-size: 28rem;
      color: var(--primary);
      opacity: 0.08;
      pointer-events: none;
    }
    .bg-icon.top-left     { top: -80px; left: -60px; transform: rotate(-25deg); }
    .bg-icon.bottom-right { bottom: -100px; right: -80px; transform: rotate(30deg); }

     

    .page-header {
      text-align: center; margin-bottom: 2rem;
    }
    .page-header h1 {
      font-size: 2.25rem; font-weight: 600;
    }
    .page-header p {
      color: var(--gray); margin-top: 0.5rem;
    }

    /* toolbar-card */
    .toolbar-card {
      background: #fff;
      padding: 1rem 1.5rem;
      border-radius: var(--border-radius);
      box-shadow: var(--box-shadow-lg);
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      justify-content: center;
      align-items: center;
      margin-bottom: 2rem;
    }
    .toolbar-card .input-group {
      max-width: 280px; width: 100%; box-shadow: var(--box-shadow);
    }
    .toolbar-card .input-group .input-group-text {
      background: #fff;
      border: 1px solid #dee2e6;
      border-right: none;
      border-top-left-radius: var(--border-radius);
      border-bottom-left-radius: var(--border-radius);
      color: var(--gray);
    }
    .toolbar-card .input-group .form-control,
    .toolbar-card .input-group .form-select {
      border: 1px solid #dee2e6;
      border-left: none;
      border-top-right-radius: var(--border-radius);
      border-bottom-right-radius: var(--border-radius);
      padding-left: .75rem;
    }
    .toolbar-card .input-group .form-control:focus,
    .toolbar-card .input-group .form-select:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(99,102,241,0.25);
    }
    .toolbar-card .btn-new {
      white-space: nowrap;
      padding: .75rem 1.5rem;
      border-radius: var(--border-radius);
      box-shadow: var(--box-shadow);
      font-weight: 500;
      background: linear-gradient(135deg, var(--primary), var(--primary-dark));
      color: #fff;
      border: none;
    }
    .toolbar-card .btn-new:hover {
      background: var(--primary-dark);
      transform: translateY(-1px);
      box-shadow: var(--box-shadow-lg);
    }

    /* grid & cards */
    .card-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(260px,1fr));
      gap: 1.5rem;
    }
    .equipment-card {
      background: #fff;
      border-radius: var(--border-radius);
      box-shadow: var(--box-shadow);
      overflow: hidden;
      position: relative;
      transition: transform .3s ease, box-shadow .3s ease;
    }
    .equipment-card:hover {
      transform: translateY(-5px);
      box-shadow: var(--box-shadow-lg);
    }
    .equipment-card header {
      background: linear-gradient(135deg, var(--primary), var(--primary-dark));
      padding: 1rem; text-align: center; color: #fff;
    }
    .equipment-card header .category-icon {
      font-size: 1.75rem; margin-bottom: .5rem;
    }
    .equipment-card header h5 {
      margin: 0; font-size: 1.1rem; font-weight: 500; text-transform: uppercase;
    }
    .equipment-card .card-body {
      padding: 1rem 1.5rem;
    }
    .status-badge {
      display: inline-block; padding: .25rem .75rem;
      border-radius: var(--border-radius); font-size: .75rem;
      text-transform: uppercase; font-weight: 500; margin-bottom: .75rem;
    }
    .status-active      { background: var(--success);      color: #fff; }
    .status-maintenance { background: var(--warning);      color: #fff; }
    .status-inactive    { background: var(--gray);         color: #fff; }

    .equipment-card ul {
      list-style: none; padding: 0; margin: 0; font-size: .9rem; color: var(--dark);
    }
    .equipment-card ul li {
      display: flex; justify-content: space-between; margin-bottom: .4rem;
    }
    .actions {
      position: absolute; top: .75rem; right: .75rem;
      display: flex; gap: .5rem; opacity: 0; transition: opacity .2s ease;
    }
    .equipment-card:hover .actions { opacity: 1; }
    .actions .btn {
      width: 2.25rem; height: 2.25rem;
      display: flex; align-items: center; justify-content: center;
      border-radius: 50%; border: none;
      background: #fff; color: var(--primary-dark);
      box-shadow: var(--box-shadow);
    }
    .actions .btn-edit   { background: var(--primary); color: #fff; }
    .actions .btn-delete { background: var(--danger);  color: #fff; }

    #containerAll {
        margin-top:5em;
      
    }

    @@media (max-width: 576px) {
      .toolbar-card {
        flex-direction: column;
        align-items: stretch;
      }
      .toolbar-card .btn-new {
        width: 100%;
      }
    }
  </style>
</head>
<body>

  <i class="fas fa-cog bg-icon top-left"></i>
  <i class="fas fa-cogs bg-icon bottom-right"></i>

  <div id="containerAll" class="container">
    <div class="page-header" data-aos="fade-down">
      <h1>All Equipment</h1>
      <p>Manage and overview all devices</p>
    </div>

    <div class="toolbar-card" data-aos="fade-up">
      <div class="input-group">
        <span class="input-group-text"><i class="fas fa-search"></i></span>
        <input asp-for="SearchTerm"
               id="searchInput"
               class="form-control"
               placeholder="Search equipment..."
               value="@Model.SearchTerm" />
      </div>
      <div class="input-group">
        <span class="input-group-text"><i class="fas fa-filter"></i></span>
        <select asp-for="CategoryFilter"
                class="form-select"
                id="filterCategory">
          <option value="">All Categories</option>
          @foreach(var cat in Model.Categories)
          {
           @*  <option value="@cat.Value" @(cat.Value == Model.CategoryFilter ? "selected" : "")>
              @cat.Text
            </option> *@
          }
        </select>
      </div>
      <a asp-controller="Equipment"
         asp-action="Create"
         class="btn-new btn">
        <i class="fas fa-plus me-2"></i>New Equipment
      </a>
    </div>

    <div class="card-grid d-flex flex-column" id="equipmentContainer" data-aos="fade-up">
      <partial name="_EquipmentGridPartial" model="Model.Equipments" />
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.7.0.min.js"
          integrity="sha256-3gJwYpM6i07cH0FQvF5cbNfX2Nsr1pOc+U8qCwqFB6E="
          crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
  <script>
    AOS.init({ duration: 600, once: true });

    function loadEquipment(search, category) {
      $.get("/Equipment/Filter", {
        searchTerm: search,
        category:   category
      }, function(html) {
        $("#equipmentContainer").html(html);
        AOS.refresh();
      });
    }

    $(function() {
      // loadEquipment("@Model.SearchTerm", "@Model.CategoryFilter");

      $("#searchInput").on("input", function() {
        loadEquipment(this.value, $("#filterCategory").val());
      });
      $("#filterCategory").on("change", function() {
        loadEquipment($("#searchInput").val(), this.value);
      });
    });
  </script>
</body>
</html>
